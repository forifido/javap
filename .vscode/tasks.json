{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "build",
            "command": "c++",
            "isShellCommand": true,
            "args": ["-g", "-Wall" ,"-std=gnu++11", "${file}", "-o", "${fileBasenameNoExtension}"],
            "showOutput": "always"
        },
        {
            "taskName": "run",
            "command": "./${fileBasenameNoExtension}", 
            "args": [],
            "isShellCommand": true,
            "showOutput": "always"
        }
    ]
}